    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.musclefive.servlet.MyFirstServlet</servlet-class>
        <init-param>
            <param-name>p1</param-name>
            <param-value>p1Value</param-value>
        </init-param>
        <init-param>
            <param-name>p2</param-name>
            <param-value>p2Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>IncludeServlet</servlet-name>
        <servlet-class>com.musclefive.servlet.IncludedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForwardServlet</servlet-name>
        <servlet-class>com.musclefive.servlet.ForwardedServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/first</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IncludeServlet</servlet-name>
        <url-pattern>/include.servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForwardServlet</servlet-name>
        <url-pattern>/forward.servlet</url-pattern>
    </servlet-mapping>
